<Window x:Class="Map.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:local="clr-namespace:Map"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270*"/>
            <ColumnDefinition Width="900*"/>
        </Grid.ColumnDefinitions>
        <m:Map Mode="Road" ZoomLevel="14" CredentialsProvider ="INSET_YOU_BING_MAPS_KEY" Center="48.0090,-122.2021" x:Name="myMap" Grid.Column="1">
            <Canvas m:MapLayer.Position="48.0090,-122.2021" m:MapLayer.PositionOrigin="BottomCenter" Width="30" Height="30"/>
            
        </m:Map>

    </Grid>
</Window>
